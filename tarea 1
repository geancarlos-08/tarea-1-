	//sali: precio final despues del descuento osea d
	escribir "INICIO DEL EJERCICIO 26"
	escribir "CALCULADORA DE PRECIO CON DESCUENTO"
	definir a,b,c,d como reales
	escribir "ingrese el precio del producto"
